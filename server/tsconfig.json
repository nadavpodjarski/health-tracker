{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "declarationMap": true,
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["@types", "node_modules/@types"],
    "outDir": "./build",
    "incremental": true
  }
}
